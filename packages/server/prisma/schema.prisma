generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Shift {
  shiftId Int @id @default(autoincrement()) @map("id")
  shiftCompanyName  String @unique @map("company_name")
  shiftCompanyLocation String @map("company_location")
  shiftStartsFrom DateTime @map("starts_from")
  shiftEndsAt DateTime @map("ends_at")
  shiftCreatedAt DateTime @default(now()) @map("created_at")
  shiftUpdatedAt DateTime @updatedAt @map("updated_at")

  @@map("shifts")
}